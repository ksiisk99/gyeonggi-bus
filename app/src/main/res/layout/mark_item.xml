<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    android:elevation="@dimen/_6sdp"
    android:background="@drawable/bus_item_design"
    android:layout_margin="@dimen/_5sdp">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_6sdp"
        android:id="@+id/bgColor"
        android:background="#00A9F4"
        app:layout_constraintStart_toStartOf="@id/constraint"
        app:layout_constraintEnd_toEndOf="@id/constraint"
        app:layout_constraintTop_toTopOf="@id/constraint"
        ></View>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingStart="@dimen/_2sdp"
        android:id="@+id/constraint"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/ic_baseline_clear_24"
            android:id="@+id/deleteMark"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:layout_constraintEnd_toEndOf="@id/constraint"
            ></androidx.appcompat.widget.AppCompatButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/routeName"
            android:textSize="@dimen/_21sdp"
            android:text="53"
            app:layout_constraintStart_toStartOf="@id/constraint"
            app:layout_constraintTop_toTopOf="@id/constraint"
            android:layout_marginTop="@dimen/_8sdp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stationName"
            android:textSize="@dimen/_10sdp"
            android:text="삼산초등학교"
            app:layout_constraintStart_toStartOf="@id/constraint"
            app:layout_constraintTop_toBottomOf="@+id/routeName"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/predictTime1"
            android:textSize="@dimen/_11sdp"
            android:text="약 5분 전"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@id/constraint"
            app:layout_constraintTop_toBottomOf="@+id/stationName"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/predictTime2"
            android:textSize="@dimen/_11sdp"
            android:text="약 5분 전"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/constraint"
            app:layout_constraintTop_toBottomOf="@+id/predictTime1"
            ></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>